<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Msg thread</th>
      <th>Uid</th>
      <th>Created time</th>
      <th>Sender name</th>
      <th>Sender uid</th>
      <th>Content</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.msg_thread %></td>
        <td><%= message.uid %></td>
        <td><%= message.created_time %></td>
        <td><%= message.sender_name %></td>
        <td><%= message.sender_uid %></td>
        <td><%= message.content %></td>
        <td><%= message.attachment %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

